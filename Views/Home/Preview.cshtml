@model Youtube.Models.VideoModel
@{
    ViewBag.Title = "Preview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section headerscripts
{
    <script type='text/javascript'>        CHLK_MESSENGER.showPlus({}, 'https://localhost/chalkable');</script>
}
<input type="hidden" id="baseremoteurl" value="https://localhost/chalkable"/>


@using (Html.BeginForm("Edit", "Home")) {    
    <div>
        @Html.Hidden("announcementApplicationId", Model.AnnouncementApplicationId)
       @Html.TextBox("query", "")<input type="submit" value="Search" />        
    </div>
}


<h2>Preview</h2>
@{
    string path = "http://www.youtube.com/embed/" + Model.Id;
}
<iframe width="420" height="315" src="@path" frameborder="0" allowfullscreen></iframe>
<br />
Views: @Model.Views <br />
Duration: @Model.Duration <br />
uploaded by: @Model.UploadedBy <br />
@Model.Description 
<br /><br />
@Html.ActionLink("cancel", "Edit", new RouteValueDictionary { {"announcementApplicationId", Model.AnnouncementApplicationId} });